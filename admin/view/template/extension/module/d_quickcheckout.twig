<script type="text/javascript"><!--
$(function () {
    //checkbox
    $(".switcher[type='checkbox']").bootstrapSwitch({
        'onColor': 'success',
        'onText': '{{text_yes}}',
        'offText': '{{text_no}}',
    });

    $(document).on('click', '#save_and_stay', function(){
        $.ajax( {
            type: 'post',
            url: $('#form').attr('action') + '&save',
            data: $('#form').serialize(),
            beforeSend: function() {
                $('#form').fadeTo('slow', 0.5);
            },
            complete: function() {
                $('#form').fadeTo('slow', 1);
            },
            success: function( response ) {
                console.log( response );
            }
        });
    });

    $(document).on('click', '.addSetting', function(){

        $.ajax( {
            type: 'post',
            url: '{{add_setting}}',
            beforeSend: function() {
                $('#form').fadeTo('slow', 0.5);
            },
            complete: function() {
                $('#form').fadeTo('slow', 1);
            },
            success: function( response ) {
                location.reload();
                console.log( response );
            }
        });

    })

    $(document).on('click', '.deleteSetting', function(){
        var setting_id = $(this).data('setting_id');
        $.ajax( {
            type: 'post',
            url: '{{delete_setting}}',
            data: 'setting_id='+setting_id,
            beforeSend: function() {
                $('#form').fadeTo('slow', 0.5);
            },
            complete: function() {
                $('#form').fadeTo('slow', 1);
            },
            success: function( response ) {
                location.reload();
                console.log( response );
            }
        });

    })

    $(document).on('click', '.editor', function(){

        var setting_id = $(this).data('setting_id');
        var editor = $(this).attr('href');

        window.open(editor+'&setting_id='+setting_id, '_blank');
        return false;

    })
});
//--></script>

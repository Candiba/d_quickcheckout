                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_setting" >
                            <div class="tab-body">
                                <form action="{{action}}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="input_status">{{entry_status}}</label>
                                        <div class="col-sm-10">                                     
                                            <input type="hidden" name="{{codename}}_status" value="0" />
                                            <input type="checkbox" name="{{codename}}_status" class="switcher" data-label-text="{{text_enabled}}"id="input_status"  {{attribute(_context, codename~'_status') ? 'checked="checked"' }} value="1" />
                                        </div>
                                    </div><!-- //status -->

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="input_status">{{entry_bootstrap}}</label>
                                        <div class="col-sm-10">                                     
                                            <input type="hidden" name="{{codename}}_bootstrap" value="0" />
                                            <input type="checkbox" name="{{codename}}_bootstrap" class="switcher" data-label-text="{{text_enabled}}"id="input_bootstrap"  {{attribute(_context, codename~'_bootstrap') ? 'checked="checked"' }} value="1" />
                                        </div>
                                    </div><!-- //status -->

                                    {% if settings is empty %}
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="input_status">Add setting</label>
                                            <div class="col-sm-10">                                     
                                                <a class="btn btn-success addSetting" ><i class="fa fa-plus"></i> Add Setting</a>
                                            </div>
                                        </div><!-- //editor -->
                                    {% endif %}

                                    {% if settings  %}
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="input_status">Editor</label>
                                        <div class="col-md-10">   
                                        {% for setting in settings %}
                                            <a class="btn btn-info editor" href="{{editor}}" data-setting_id="{{setting.setting_id}}" ><i class="fa fa-pencil"></i> Go to Visual Editor</a>
                                         {% endfor %}
